		return $conexion->query($sql);
	}
	
	function actualizar($tabla,$campos,$condicion)
	{
		conectar();
		$sql= "UPDATE $tabla SET $campos $condicion";
		return $conexion->query($sql);
	}
	
	function borrar($tabla, $condicion)
	{
		conectar();
		$sql = "DELETE FROM $tabla $condicion";
		return $conexion->query($sql);
	}
	
